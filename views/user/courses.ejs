<%- include("navbar.ejs") %>
<br><br>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 mb-5">
            <h3 class="text-center">
                <i class="fa-solid fa-star" style="color: rgb(207, 39, 72);" ></i>
                All courses
                <i class="fa-solid fa-star" style="color: rgb(207, 39, 72);" ></i>
            </h3>
        </div>
        <% for(var i=0; i<courses.length;i++) { %>
            <div class="col-md-4 p-3">
                <div class="card" >
                    <div class="card-header text-center">
                        <b class="pr-3">
                            <%=courses[i].course_name %>
                       </b>
                    </div>
                    <div class="card-body">
                        <img src="/uploads/<%=courses[i].course_image %>" width="100%" height="200px">
                    </div>
                    <div class="card-footer  bg-dark text-white">
                       <h4>&#8377;<%=courses[i].course_price %>/-
                            <a href="/course_details/<%=courses[i].course_id%>">
                                <button class="btn btn-outline-light float-right btn-sm">View Details</button>
                            </a>
                        </h4>
                    </div>
                </div>
            </div>
            <% } %>    
    </div>
</div>




<%- include("footer.ejs") %>