<%- include("navbar.ejs") %>


<form action="/admin/save_course" method="post" enctype="multipart/form-data">
    <div class="container-fluid p-5 bg-white">
        <div class="row">
            <div class="col-md-12 text-center mb-4">
                <h3>Add New Course</h3>
            </div>
            
            <div class="col-md-4 mb-4">
                <label>Course Name* </label>
                <input type="text" name="courses_name" class="form-control" required>
            </div>
            
            <div class="col-md-4 mb-4">
                <label>Course Category* </label>
                <select name="course_category_id" class="form-control" required>
                    <option disabled selected value="">SELECT CATEGORY</option>
                    <% for(var i=0;i<cat_list.length;i++){ %>
                        <option value="<%=cat_list[i].category_id%>"><%=cat_list[i].category_name%></option>
                    <% } %>
                </select>
            </div>

            <div class="col-md-4 mb-4">
                <label>Course Duration</label>
                <input type="text" name="course_duration" class="form-control">
            </div>
            
            <div class="col-md-4 mb-4">
                <label>Course Price*</label>
                <input type="number" name="course_price" class="form-control" required>
            </div>

            <div class="col-md-4 mb-4">
                <label>Course Image*</label>
                <input type="file" name="course_image" class="form-control" required>
            </div>

            <div class="col-md-4 mb-4">
                <label>Course Sample Video</label>
                <input type="file" name="course_sample_video" class="form-control">
            </div>

            <div class="col-md-4 mb-4">
                <label>Course Mentor</label>
                <input type="text" name="course_mentor" class="form-control">
            </div>

            <div class="col-md-4 mb-4">
                <label>Course Link</label>
                <input type="text" name="course_link" class="form-control">
            </div>

            <div class="col-md-4 mb-4">
                <label>Platform*</label>
                <select name="course_platform" class="form-control" required>
                    <option disabled selected value="">Select Platform</option>
                    <option>Online Live</option>
                    <option>Online Recorded</option>
                    <option>Classroom</option>
                </select>
            </div>

            <div class="col-md-12">
                <label>Course Details</label>
                <textarea name="course_details" class="form-control"></textarea>
            </div>

            <div class="col-md-12 mt-3 text-center">
                <button class="btn btn-primary">Save Course</button>
            </div>
        </div>
    </div>
</form>


