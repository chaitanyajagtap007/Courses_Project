<%- include("navbar.ejs") %>
<form action="/admin/save_category" method="post">
    <div class="container-fluid p-5 bg-white">
        <div class="row">
                <div class="col-md-12 text-center">
                    <h1>Manage Category</h1>
                </div>
                <div class="col-md-6 mt-3">
                    Category Name
                    <input type="text" name="category_name" class="form-control">
                </div>
                
                <div class="col-md-6 mt-3">
                    Category Details
                    <textarea name="category_details" class="form-control"></textarea>
                </div>
                <div class="col-md-12 mt-3 text-center">
                    <button class="btn btn-primary">
                        Save Category
                    </button>
                </div>
        </div>  
    </div>
</form>
<hr>    
<br>
<div class="continer">
    <table class="table table-bordered table-primary table-sm">
        <tr>
            <th></th>
            <th>SN</th>   
            <th>Name</th>   
            <th>Datales</th>   
        </tr>
        <% for( i=0;i<cats.length;i++) { %>
            <tr>
                <td width="5%" style="white-space:nowrap;">
                    <button class="btn btn-primary btn-sm">
                        <i class="fa fa-edit"></i>
                    </button>
                    <button class="btn btn-danger btn-sm">
                        <i class="fa fa-trash"></i>
                    </button>
                </td>
                <td><%= i+1 %></td>
                <td><%= cats[i].category_name %></td>
                <td width="70%">
                    <div style=" white-space:nowrap; text-overflow:ellipsis; overflow: hidden; width: 800px;">
                        <%= cats[i].category_details %>
                    </div>
                </td>
            </tr>
        <% } %>
    </table>
</div>
<%- include("footer.ejs") %>